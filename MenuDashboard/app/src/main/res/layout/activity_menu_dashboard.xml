<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MenuDashboard">

    <TextView
        android:layout_width="match_parent"
        android:text="MENU DASHBOARD"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:padding="15dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iconsepeda"
            android:layout_width="170dp"
            android:layout_height="180dp"
            android:background="@drawable/bundar"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:onClick="Sepeda"
            android:src="@drawable/ic_baseline_directions_bike_24"/>

        <View
            android:layout_width="15dp"
            android:layout_height="0dp"></View>
        <ImageView
            android:id="@+id/iconpesawat"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:onClick="Pesawat"
            android:layout_width="170dp"
            android:background="@drawable/bundar"
            android:src="@drawable/ic_baseline_flight_24"
            android:layout_height="180dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:padding="15dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="170dp"
            android:layout_height="180dp"
            android:background="@drawable/bundar"
            android:src="@drawable/ic_baseline_local_phone_24"/>

        <View
            android:layout_width="15dp"
            android:layout_height="0dp"></View>
        <ImageView
            android:layout_width="170dp"
            android:background="@drawable/bundar"
            android:src="@drawable/ic_baseline_mic_none_24"
            android:layout_height="180dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:padding="15dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="170dp"
            android:layout_height="180dp"
            android:background="@drawable/bundar"
            android:src="@drawable/ic_baseline_restaurant_menu_24"/>

        <View
            android:layout_width="15dp"
            android:layout_height="0dp"></View>
        <ImageView
            android:layout_width="170dp"
            android:background="@drawable/bundar"
            android:src="@drawable/ic_baseline_school_24"
            android:layout_height="180dp"/>
    </LinearLayout>
</LinearLayout>